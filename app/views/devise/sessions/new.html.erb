<h2><%= t('.header') %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <div><%= f.email_field :email, :autofocus => true, :placeholder => User.human_attribute_name('email') %></div>

  <div><%= f.password_field :password, :placeholder => User.human_attribute_name('password') %></div>

  <p class="alert"><%= alert %></p>
  
  <div><%= f.submit t("devise.shared.login"), "data-theme" => "b" %></div>
<% end %>

<%= render "devise/shared/links" %>
