<h2><%= t('.header') %></h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, "data-ajax" => false }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, t(".password") %>
  <%= f.password_field :password, :autofocus => true %></div>

  <div><%= f.label :password_confirmation, t(".password_confirmation") %>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit t(".submit") %></div>
<% end %>

<%= render "devise/shared/links" %>
